<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursovaya.Task4"
             Title="Task4">
    <VerticalStackLayout Margin="30" Padding="20" Spacing="30">

        <Grid ColumnDefinitions="3*,3*,3*" RowDefinitions="Auto, Auto" ColumnSpacing="5" RowSpacing="10">
            <Button Grid.Row="0" Grid.Column="0" x:Name="generateButton" Clicked="generateButton_Clicked" Text="Генерация"/>
            <Button Grid.Row="0" Grid.Column="1" x:Name="countQButton" Clicked="countQButton_Clicked" Text="Подсчитать Q" />
            <Button Grid.Row="0" Grid.Column="2" x:Name="removeTButton" Clicked="removeTButton_Clicked" Text="Удалить T" />
            <Button Grid.Row="1" Grid.Column="1" x:Name="labelCountQ" IsEnabled="False"/>
        </Grid>

        <Label x:Name="labelAnswer" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
